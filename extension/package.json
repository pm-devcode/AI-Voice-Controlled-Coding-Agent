{
  "name": "vcca",
  "displayName": "Voice-Controlled Coding Agent",
  "description": "AI-powered voice coding assistant",
  "version": "0.0.1",
  "icon": "media/icon.svg",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vcca-sidebar",
          "title": "VCCA",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "vcca-sidebar": [
        {
          "type": "webview",
          "id": "vcca.chatView",
          "name": "Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "vcca.start",
        "title": "VCCA: Start Agent"
      },
      {
        "command": "vcca.stop",
        "title": "VCCA: Stop Agent"
      },
      {
        "command": "vcca.status",
        "title": "VCCA: Check Agent Status"
      },
      {
        "command": "vcca.reconnect",
        "title": "VCCA: Reconnect/Restart Agent"
      },
      {
        "command": "vcca.toggleVoice",
        "title": "VCCA: Toggle Voice Control"
      },
      {
        "command": "vcca.setApiKey",
        "title": "VCCA: Set Gemini API Key"
      }
    ],
    "keybindings": [
      {
        "command": "vcca.toggleVoice",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "VCCA",
      "properties": {
        "vcca.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to the Python executable used to run the VCCA backend."
        },
        "vcca.port": {
          "type": "number",
          "default": 8775,
          "description": "Port on which the VCCA backend server runs."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/glob": "^8.1.0",
    "@types/highlight.js": "^9.12.4",
    "@types/marked": "^5.0.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "css-loader": "^6.8.1",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "dompurify": "^3.3.1",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0"
  }
}
